<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dl_beijing">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_layout_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_width_height"
        android:layout_marginRight="@dimen/margin_width_height"
        android:background="@drawable/denglukuang"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:drawableLeft="@drawable/shoujihaodl"
            android:drawablePadding="@dimen/page_margin"
            android:hint="请输入手机号"
            android:maxLength="11"
            android:paddingLeft="@dimen/margin_width_height"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/login_edit_user_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/mimadl"
                android:drawablePadding="@dimen/page_margin"
                android:hint="请输入登录密码"
                android:paddingLeft="@dimen/margin_width_height"
                android:password="true"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/img_errorNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/login_edit_user_pwd"
                android:layout_alignTop="@+id/login_edit_user_pwd"
                android:layout_marginRight="@dimen/page_margin15"
                android:layout_marginTop="@dimen/page_margin"
                android:src="@drawable/delete_gray"
                android:visibility="visible" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_width_height"
        android:layout_marginRight="@dimen/margin_width_height"
        android:layout_marginTop="@dimen/margin_width_height"
        android:background="@color/red"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size18" />
</RelativeLayout>
